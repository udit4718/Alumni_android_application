<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_login_screen"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.post_login.MainScreenActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/connecting_people"
        android:contentDescription="image to show a community"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:id="@+id/imageView3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <at.markushi.ui.CircleButton
            android:id="@+id/circleButton_event"
            android:layout_width="70dip"
            android:layout_height="70dip"
            app:cb_color="#e53935"
            app:cb_pressedRingWidth="5dip"
            android:layout_alignTop="@+id/member"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/events"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <at.markushi.ui.CircleButton
            android:id="@+id/circleButton_member"
            android:layout_width="70dip"
            android:layout_height="70dip"
            app:cb_color="#e53935"
            app:cb_pressedRingWidth="5dip"
            android:layout_gravity="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/members"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_gravity="center"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <at.markushi.ui.CircleButton
            android:id="@+id/circleButton_about"
            android:layout_width="70dip"
            android:layout_height="70dip"
            app:cb_color="#e53935"

            app:cb_pressedRingWidth="5dip"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/about"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_gravity="center" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arya Alumni"
            android:id="@+id/textView"
            android:textSize="35sp"
            android:textColor="@color/card_background"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>

